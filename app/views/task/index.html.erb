<h1 class="text-center mt-4">My Tasks</h1>
<div class="row d-flex justify-content-center gap-2 bg-light p-5 mt-4 ms-5 me-5 rounded border border-light shadow-sm">
<div class="d-flex w-50">
  <ul class="list-unstyled w-100">
    <% @tasks.each do |task| %>
      <li class="row mb-3">
        <div class="col-12 alert alert-primary d-flex justify-content-between align-items-center">
          <div class="d-flex justify-content center">
            <%= check_box_tag "task_#{task.id}", task.id, task.completed, class: "form-check-input" %>
            <%= link_to task.title, task_path(task)  %>
          </div>
          <div>
            <button class="btn btn-primary me-2">
              <%= link_to "update task", edit_path(task) %>
            </button>
            <button class="btn btn-danger">
              <%= link_to "Delete", delete_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </button>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div class="d-flex justify-content-center w-50">
<span class="btn btn-primary btn-lg w-75" ><%= link_to "create task", new_task_path %></span>
</div>


</div>
